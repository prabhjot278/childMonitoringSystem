<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".otherinfoActivity">

    <TextView
        android:id="@+id/justup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="Sign Up"
        android:textStyle="bold"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/justtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/justup"
        android:padding="10dp"
        android:text="Enter Details"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="30sp" />

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/justtext"
        android:id="@+id/l234"
        android:layout_margin="10dp"
        android:weightSum="1">

        <ImageView android:layout_width="0dp"
            android:layout_weight="0.2"
            android:src="@drawable/username"
            android:layout_height="70dp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/username_text_input_layout"
        app:passwordToggleEnabled="true"
        app:hintTextAppearance="@style/HintText"
        android:layout_width="0dp"
        android:layout_weight="0.8"
        android:layout_height="wrap_content">
    <EditText android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userfrlgn"
        android:layout_margin="10dp"
        android:hint="Email"
        android:textColor="#000"
        android:padding="10dp"
        android:textSize="20sp"
       />
    </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/l234"
        android:layout_margin="10dp"
        android:id="@+id/l23"
        android:weightSum="1">

    <ImageView android:layout_width="0dp"
        android:layout_weight="0.2"
        android:src="@drawable/pass"
        android:layout_height="70dp"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/username_text_input_layout2"
        app:passwordToggleEnabled="true"
        android:layout_weight="0.8"
         android:layout_width="0dp"
        app:hintTextAppearance="@style/HintText"
        android:layout_height="wrap_content">

        <EditText android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passfrlgn"
        android:inputType="textPassword"
            android:layout_margin="10dp"
            android:hint="Password"
            android:textSize="20sp"
            android:textColor="#000"
            android:maxLength="15"
            android:padding="10dp"
        />
    </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_layout"
        android:layout_below="@+id/l23"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Sign Up"
        android:textSize="15sp"
        android:padding="10dp"
        android:onClick="finishing"
        android:textColor="#fff"
        android:gravity="center"
        android:id="@+id/signingup"
        />

</RelativeLayout>